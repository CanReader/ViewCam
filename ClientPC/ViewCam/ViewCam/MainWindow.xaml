<Window x:Class="ViewCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewCam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowState="Normal" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Image x:Name="ImageControl" Width="Auto" Height="Auto"/>
        <TextBlock x:Name="ImageDrops" FontSize="30" Text="Image drop:" Foreground="Red"/>
        <TextBlock x:Name="ConnectionStatus" x:FieldModifier="public" Text="Not connected" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
